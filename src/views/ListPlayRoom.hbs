<div class="col-md-6 offset-md-3">
  <div class="card bg-dark text-light">
    <div class="card-header">
      <h1 class="h4 text-white">Salones {{nameComunidad}}</h1>
    </div>
    <div class="card-body">
      {{#if salones}}
      <ul class="list-group">
        {{#each salones}}
        <li
          class="list-group-item d-flex justify-content-between
          align-items-center">
          <div class="my-auto">
            <h3 class="h6">{{id}}</h3>
          </div>
          <div>
            <a
              href="/delete-contact/{{id}}"
              class="btn btn-danger">Delete</a>
            <a
              href="/edit-contact/{{id}}"
              class="btn btn-secondary">Edit</a>
          </div>
        </li>
        {{/each}}
      </ul>
      {{else}}
      <p class="fs-4 text-center">Sin Salones.</p>
      {{/if}}
    </div>
    <div class="card-footer">
      <form action="/addHall/{{nameComunidad}}" method="POST">
        <h3 class="h6 text-light">Adicionar Nueva Sala:</h3>
        <div class="row">
          <div class="col">
            <input
              type="Text"
              name="Name"
              placeholder="Nombre de la Sala"
              class="form-control mb-3"
              autofocus
              />
          </div>
          <div class="col">
            <input
              type="Text"
              name="ip"
              placeholder="ip"
              class="form-control mb-3"
              />
          </div>
          <div class="col">
            <input
              type="Text"
              name="pass"
              placeholder="ContraseÃ±a"
              class="form-control mb-3"
              />
          </div>
          <div class="col">
            <input
              type="Text"
              name="user"
              placeholder="Usuario"
              class="form-control mb-3"
              />
          </div>
        </div>       
        <button class="btn btn-primary btn-block">
          Add
        </button>
      </form>
    </div>
  </div>
</div>